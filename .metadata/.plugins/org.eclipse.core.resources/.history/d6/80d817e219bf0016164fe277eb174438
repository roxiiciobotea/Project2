package components;

import java.util.Date;

import event.Event;

public class Bidder implements Producer, Consumer {
	private String name;
	private Offer crtOffer;

	public Bidder(String name) {
		this.name = name;
	}

	public String getName() {
		return name;
	}
	
	public void offer(Date dateCreated) {
		this.crtOffer = new Offer(dateCreated);
	}
	
	public void modifyOffer(Date dateModified){
		crtOffer.setDateModified(dateModified);
	}

	public Event newOffer() {
		return new Event("NEW_OFFER");
	}
	
	public Event modifiedOffer(){
		return new Event("MODIFIED_OFFER");
	}
}
